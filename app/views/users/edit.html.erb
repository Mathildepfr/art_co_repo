<div class="container-forms">
  <h1>Edit your <strong>profile</strong> !</h1>

  <%= simple_form_for(@user) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :is_artist, input_html: { class: "toggle" } %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Submit", class: "btn btn-success" %>
  <% end %>
</div>
