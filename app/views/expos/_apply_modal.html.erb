</button> %>
<%= link_to 'Apply', dashboard_path, class: "btn homepage-btn", data: { toggle: "modal", target: "#expoModal#{expo.id}"}  %>

<!-- Modal -->
<div class="modal fade" id="expoModal<%= expo.id %>" tabindex="-1" aria-labelledby="expoModal<%= expo.id %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Apply for this expo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h4>Apply for <%= expo.venue.name %></h4>
        <%= simple_form_for [expo, expo_collection] do |f| %>
          <%= f.input(:collection_id, :collection => current_user.collections) %>
          <%= f.submit 'Apply' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
