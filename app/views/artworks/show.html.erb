<div class="artworks-show-container">
  <div class="artworks-show-text">
    <h2><strong><%= link_to @artwork.title, artwork_path(@artwork) %></strong></h2>
    <p><i class="fas fa-money-bill-alt"></i> $<%= @artwork.price %></p>
    <p><i class="fas fa-hat-cowboy-side"></i><span class="text-muted"> Size: </span><%= @artwork.size %></p>
    <p><i class="fas fa-paint-brush"></i><span class="text-muted"> Style: </span><%= @artwork.style %></p>
    <p><i class="fas fa-palette"></i><span class="text-muted"> Type: </span><%= @artwork.medium %></p>
    <p><i class="fas fa-question-circle"></i></i><span class="text-muted"> Available: </span><%= @artwork.available ? '<i class="fas fa-check-circle text-success"></i>'.html_safe : '<i class="fas fa-times-circle text-danger"></i>'.html_safe %></p>
  </div>
  <%= link_to artwork_path(@artwork) do %>
    <div class="artwork-show-card-img" style="background-image: url('<%= image_path @artwork.photo_url, crop: :fill %>')"></div>
  <% end %>
  <div class="artworks-show-text">
    <p><i class="fas fa-file-alt"></i><span class="text-muted"> Description: </span><%= @artwork.description %></p>
  </div>
</div>
