<div class="img-container" data-slideshow>
  <div class="img-rng">
    <% rng = (1..20).to_a.shuffle %>
    <% rng.each do |num| %>
    <%= image_tag "banner/ArtBanner#{num}.jpg", alt: "Art Banner #{num}", class: "banner-home" %>
    <% end %>
  </div>
</div>

<div class="homepage-dark">
  <div class="homepage-dark-text">
    <h1>Art Co is the world’s leading platform <br>
    to create exhibitions and find the best artists.</h1>
    <p class="text-light">We make ambitious ideas a reality. <br>
    ArtCo can help you create the most amazing exhibitions in your venue. <br>
    We make it easy to work with artists from around the world
    and our community can help you increase your popularity.</p>
    <br>
    <div class="links-venue-artist">
      <a href="#venue" class="venue-btn">I'm a venue owner</a>
      <a href="#artist" class="artist-btn">I'm an artist</a>
    </div>
  </div>
</div>

<div class="homepage">
  <div class="homepage-looking">
    <%= link_to users_path(@users) do %>
      <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631513362/Messages_xnvwuo.png", crop: :fill) %>
    <% end %>
    <p>Looking for someone?</p>
    <%= link_to 'Direct Contact', users_path(@users), class: "btn homepage-btn"  %>
  </div>
  <div class="homepage-container">
    <div class="homepage-cards">
      <div class="homepage-card">
        <%= link_to dashboard_path, class: "hompage-link-image" do %>
          <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631511957/Checklist_my0wvf.png", crop: :fill) %>
        <% end %>
        <%= link_to 'Create an Expo', dashboard_path, class: "btn homepage-btn"  %>
        <p class="text-muted">We'll help you create an exhibition in your venue with the best artists and their most iconic collections.</p>
      </div>
      <div class="homepage-card">
        <%= link_to artworks_path(@artworks), class: "hompage-link-image" do %>
          <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631511978/Writer_gd8pjj.png", crop: :fill) %>
        <% end %>
        <%= link_to 'Find the best Artworks', artworks_path(@artworks), class: "btn homepage-btn"  %>
        <p class="text-muted">You will find all the artworks of our creative artists and see if they are available for your exhibition.</p>
      </div>
    </div>
  </div>
</div>

<div id="venue" class="homepage-steps-container">
  <div class="homepage-steps">
    <h4>For a venue owner looking for artworks</h4>

    <div class="homepage-steps-grid">
      <div class="homepage-steps-grid-cards">
        <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631503438/Analytics_rxwcsp.png", crop: :fill) %>
        <div class="homepage-steps-text">
          <p class="number">1</p>
          <p>Create a venue profile</p>
        </div>
      </div>

      <div class="homepage-steps-grid-cards">
        <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631503703/%D0%A1ontract_1_stbxbj.png", crop: :fill) %>
        <div class="homepage-steps-text">
          <p class="number">2</p>
          <p>Create an expo</p>
        </div>
      </div>

      <div class="homepage-steps-grid-cards">
        <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631503704/Designer_1_zxqeip.png", crop: :fill) %>
        <div class="homepage-steps-text">
          <p class="number">3</p>
          <p>Find an artist</p>
        </div>
      </div>
    </div>

    <%= link_to 'Sign up', new_user_session_path, class: "btn homepage-btn"  %>
  </div>
</div>

<div id="artist" class="homepage-steps-container">
  <div class="homepage-steps">
    <div class="homepage-steps-text">
      <h4>For an artist looking for exhibition opportunities</h4>
    </div>

    <div class="homepage-steps-grid">
      <div class="homepage-steps-grid-cards">
        <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631503706/Login_1_etakcg.png", crop: :fill) %>
        <div class="homepage-steps-text">
          <p class="number">1</p>
          <p>Create an artist profile</p>
        </div>
      </div>

      <div class="homepage-steps-grid-cards">
        <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631503707/Dream_1_t0j0zf.png", crop: :fill) %>
        <div class="homepage-steps-text">
          <p class="number">2</p>
          <p>Upload artworks</p>
        </div>
      </div>

      <div class="homepage-steps-grid-cards">
        <%= cl_image_tag("https://res.cloudinary.com/mathildepfr/image/upload/v1631503708/Support_1_c5xxjv.png", crop: :fill) %>
        <div class="homepage-steps-text">
          <p class="number">3</p>
          <p>Apply for an expo</p>
        </div>
      </div>
    </div>

    <%= link_to 'Sign up', new_user_session_path, class: "btn homepage-btn"  %>
  </div>
</div>

<div class="homepage-scroll-container">
  <h4>Check out some of today’s popular shots</h4>
  <div class="homepage-index-scroll">
    <% @artworks.each do |artwork| %>
      <div class="homepage-artworks-cards">
        <%= link_to artwork_path(artwork) do %>
          <div class="homepage-artworks-card-img" style="background-image: url('<%= cl_image_path artwork.photo.key, crop: :fill %>')"></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="homepage-bottom-container">
  <div class="homepage-bottom-left">
    <%= image_tag "logo.png" %>
    <p>Art Co is the world’s leading platform <br>to create expos and find the best artists.</p>
    <div class="homepage-social-media">
      <i class="fab fa-behance-square"></i>
      <i class="fab fa-dribbble-square"></i>
      <i class="fab fa-facebook-square"></i>
      <i class="fab fa-instagram-square"></i>
    </div>
    <p class="text-muted">© 2021 Art Co. All rights reserved.</p>
  </div>
  <div>
    <p>For artists</p>
    <p class="text-muted">Explore artworks</p>
    <p class="text-muted">Meetups</p>
    <p class="text-muted">Community</p>
  </div>
  <div>
    <p>For venues owners</p>
    <p class="text-muted">Hire artists</p>
    <p class="text-muted">Advertise</p>
    <p class="text-muted">Searchs</p>
  </div>
  <div>
    <p>Company</p>
    <p class="text-muted">About</p>
    <p class="text-muted">Careers</p>
    <p class="text-muted">Support</p>
  </div>
  <div class="homepage-bottom-right">
    <p>Informations</p>
    <p class="text-muted">Terms of service</p>
    <p class="text-muted">Privacy policy</p>
    <p class="text-muted">Freelancing</p>
  </div>
</div>
